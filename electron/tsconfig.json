{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "rootDir": "..",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "*": ["./*"],
      "@src/*": ["./src/*"],
      "@electron/*": ["./electron/*"]
    }
  },
  "include": [
    "*.ts",
    "types/**/*.ts",
    "../src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
