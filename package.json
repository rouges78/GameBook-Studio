{
  "name": "gamebook-studio",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "description": "Desktop application for creating interactive gamebooks and branching narratives",
  "author": "",
  "license": "MIT",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "vite",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev": "rimraf dist && concurrently \"npm run dev:vite\" \"wait-on tcp:5173 && npm run dev:electron\"",
    "build": "tsc && vite build",
    "electron:build": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron": "^28.1.0",
    "framer-motion": "^11.0.3",
    "zustand": "^4.5.0",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "react-router-dom": "^6.22.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "uuid": "^9.0.1",
    "better-sqlite3": "^9.4.1",
    "prisma": "^5.9.1",
    "lucide-react": "^0.330.0",
    "idb": "^8.0.0",
    "file-saver": "^2.0.5",
    "docx": "^8.5.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/fs-extra": "^11.0.4",
    "@types/uuid": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/file-saver": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "prettier": "^3.2.5",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "glob": "^10.3.10",
    "@prisma/client": "^5.9.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.gamebook.studio",
    "productName": "GameBook Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
