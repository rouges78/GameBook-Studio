{
  "name": "gamebook-studio",
  "private": true,
  "version": "0.9.8",
  "type": "commonjs",
  "description": "Desktop application for creating interactive gamebooks and branching narratives",
  "author": "",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "build:electron": "tsc -p tsconfig.build.json",
    "build:frontend": "vite build",
    "build": "npm run build:electron && npm run build:frontend",
    "start": "vite",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:preload": "tsc -p electron/tsconfig.json",
    "dev": "npm run dev:preload && node dev.js",
    "electron:build": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@types/react-window": "^1.8.8",
    "axios": "^1.7.7",
    "better-sqlite3": "^9.4.1",
    "chart.js": "^4.4.6",
    "docx": "^8.5.0",
    "electron-log": "^5.2.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.0.3",
    "fs-extra": "^11.2.0",
    "get-port": "^7.1.0",
    "idb": "^8.0.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "lucide-react": "^0.330.0",
    "pako": "^2.1.0",
    "prisma": "^5.9.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "react-window": "^1.8.10",
    "recharts": "^2.13.3",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-react-jsx": "^7.23.4",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@prisma/client": "^5.9.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/file-saver": "^2.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "babel-jest": "^29.7.0",
    "browserify-fs": "^1.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "glob": "^10.3.10",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2",
    "util": "^0.12.5",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gamebook.studio",
    "productName": "GameBook Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "publisherName": "GameBook Studio",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "file:///d:/GameBook-Studio/release"
      }
    ]
  }
}
